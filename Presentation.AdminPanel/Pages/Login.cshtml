@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}
<h2>Logowanie</h2>

<form method="post">
    <label>Login: <input asp-for="Username" /></label><br />
    <label>Hasło: <input asp-for="Password" type="password" /></label><br />
    <button type="submit">Zaloguj</button>
</form>

@if (Model.ErrorMessage != null)
{
    <p style="color:red">@Model.ErrorMessage</p>
}
