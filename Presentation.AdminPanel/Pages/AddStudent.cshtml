@page
@model AddStudentModel
@{
    ViewData["Title"] = "Dodaj studenta";
}

<h2>Dodaj studenta</h2>

<form method="post">
    <div>
        <label>Imię</label>
        <input asp-for="Student.FirstName" />
    </div>
    <div>
        <label>Nazwisko</label>
        <input asp-for="Student.LastName" />
    </div>
    <div>
        <label>Data urodzenia</label>
        <input asp-for="Student.BirthDate" type="date" />
    </div>
    <button type="submit">Zapisz</button>
</form>
