@page
@model CoursesModel
@{
    ViewData["Title"] = "Lista kursów";
}

<h2>Lista kursów</h2>

<a asp-page="/AddCourse">Dodaj nowy kurs</a>

@if (Model.Courses.Count == 0)
{
    <p>Brak kursów do wyświetlenia.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Tytuł</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model.Courses)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
